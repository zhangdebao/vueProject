}
/* 路由加载动画 */
.fade-enter{
  width: 0;
}
.fade-enter-active{
  width: 100%;
  transition: width 0.5s;
}

.fade-leave-active {
  width: 100%;
  transition: width 0.5s;
}
.fade-leave-to /* .fade-leave-active below version 2.1.8 */ {
  width: 0;
}


