/* 右侧表单 */
.rightForm {
  position relative;
  overflow: auto;
}
.rightForm .el-col:first-child{
  margin-top: 15px;
}
/* 右侧表单的按钮*/
.rightForm + div {
  padding-top: 2px;border-top: 1px solid #ebeef5;
}
/* 表格模块 */
.tableCard {
  margin-bottom: 20px;
}
/*滚动条*/
.commmonScoll{
  position: relative;
  overflow: auto;
  height: 100%;
